<h1>Active Threads</h1>

 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Post ID</th>

  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><img src ="<%= article.URL %>"style="width:60px;height:60px;"></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.id %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </<tr>
  <% end %>
</table>

<%= link_to 'New article', new_article_path %>
